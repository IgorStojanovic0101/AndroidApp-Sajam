<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/ic_launcher_background"
              android:gravity="center_vertical"
              android:id="@+id/myHome"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


        <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_300"


                android:layout_marginBottom="16dp"
                android:hint="Username"
               />




        <EditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_300"



                android:hint="Password"
                android:inputType="textPassword"/>



    <Button
            android:id="@+id/custom_signin_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:tag="custom_login_button"
            android:layout_margin="16dp"
            android:text="sign in"

            android:background="@color/grey_300"/>
    <Button
            android:id="@+id/custom_signup_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:textSize="18sp"
            android:text="No account yet? Create one" android:background="@drawable/button_effect"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content">
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey_400"/>
        <TextView
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="@color/grey_400"/>
        <View
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey_400"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

            <Button
                    android:id="@+id/facebook_login_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:text="sign in facebook "
                    android:tag="facebook_login_button"

                    android:background="@drawable/facebook_vector"/>

            <Button
                    android:id="@+id/google_login_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:tag="google_login_button"
                    android:text="@string/sign_in_google"
                    android:background="@drawable/google_plus_vector"/>



        </LinearLayout>



        <Button
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="logout"
                android:background="@color/grey_100"/>
    </LinearLayout>


</LinearLayout>